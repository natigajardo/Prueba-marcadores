<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>

<div class="my-4">
<%= render 'form', bookmark: @bookmark %>
</div>

<table class="table table-bordered" id="table_bookmarks">
  <thead>
    <tr>
      <th>Name</th>
      <th>Bookmark url</th>
      <th>Kind</th>
      <th>Category</th>
      <th colspan="3" class="text-center">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <%= render @bookmarks %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookmark', new_bookmark_path %>
